{
   "compilerOptions": {
      "skipLibCheck": true,
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "allowJs": true,
      "strict": true,
      "pretty": true,
      "noImplicitAny": true,
      "noImplicitReturns": false,
      "noUnusedParameters": false,
      "useUnknownInCatchVariables": true,
      "strictNullChecks": false,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "removeComments": true,
      "outDir": "./dist",
      "rootDir": "src"
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules", "spec", "build.ts"]
}
